[include]
	path = ~/.gitconfig.local
[diff]
	tool = meld
[difftool]
	prompt = false
[difftool "meld"]
	cmd = meld "$LOCAL" "$REMOTE"
[merge]
	tool = meld
[mergetool "meld"]
	cmd = meld "$LOCAL" "$MERGED" "$REMOTE" --output "$MERGED"
	trustExitCode = false
[alias]
	st = status
  br = branch -avv
	adog = log --all --decorate --oneline --graph
	alias = ! git config --get-regexp ^alias\\. | sed -e s/^alias\\.// -e s/\\ /\\ =\\ /
[credential]
	helper = cache --timeout=7200
[github]
	user = dsmftw
